@{
    ViewData["Title"] = "Admin Panel";
}
 
<div class="container BodyContainer text-center">
  <div class="btn-group btn-group-toggle formHeader" data-toggle="buttons">
      <label class="btn btn-info active">
        <input type="radio" name="contentTable" value="blog"> Posts
      </label>
      <label class="btn btn-info">
        <input type="radio" name="contentTable" value="animal"> Animals
      </label>
  </div>

  <div id="blogTable">
    <a asp-action="BlogForm">
      <button type="button" class="btn btn-success createButton">New Post</button>
    </a>
    <table class="table">
      <thead class="thead-light">
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Published</th>
              <th scope="col"></th> 
          </tr>
      </thead>
      <tbody>
          <tr>
              <td>1</td>
              <td>What it's like having 7 dogs</td>
              <td>04-05-2020</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Blog Post')">Delete</button>
              </td>
          </tr>
          <tr>
              <td>2</td>
              <td>Hiccup at my food again</td>
              <td>04-12-2020</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Blog Post')">Delete</button>
              </td>
          </tr>
          <tr>
              <td>3</td>
              <td>My soul mate...no I'm not talking about my Husband</td>
              <td>04-19-2020</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Blog Post')">Delete</button>
              </td>
          </tr>
      </tbody>
    </table>
  </div>

  <div id="animalTable" style="display:none">
    <a asp-action="AnimalForm">
      <button type="button" class="btn btn-success createButton">New Animal</button>
    </a>
    <table class="table">
      <thead class="thead-light">
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Animal</th>
              <th scope="col">Description</th>
              <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
          <tr>
              <td>1</td>
              <td>Rufus</td>
              <td>The super rare Lound</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Animal')">Delete</button>
              </td>
          </tr>
          <tr>
              <td>2</td>
              <td>Cooper</td>
              <td>A human in the body of a dog</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Animal')">Delete</button>
              </td>
          </tr>
          <tr>
              <td>3</td>
              <td>Hopper</td>
              <td>A tiny bobcat that loves trash</td>
              <td>
                <button class="btn btn-primary" type="submit">Edit</button>
                <button class="btn btn-danger" type="submit" onclick="alert('Are you sure you want to remove this Animal')">Delete</button>
              </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

