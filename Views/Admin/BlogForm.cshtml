@{
    ViewData["Title"] = "Blog Form";
}

<div class="container BodyContainer">
    <h2 class="formHeader">Create a Blog Post</h2>
    <div>
        <form>
            <div class="form-group row formRow">
                <label for="blogTitle" class="col-lg-2 col-form-label">Title</label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="blogTitle" placeholder="Blog Title">
                </div>
            </div>
            <div class="form-group row formRow">
                <label for="blogAuthor" class="col-lg-2 col-form-label">Author</label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="blogAuthor" placeholder="Author">
                </div>
            </div>
            <div class="form-group row formRow">
                <label for="publishDate" class="col-lg-2 col-form-label">Publish Date</label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="publishDate" placeholder="Publish Date">
                </div>
            </div>
            <div class="form-group row formRow">
                <label for="blogImage" class="col-lg-2 col-form-label">Image</label>
                <div class="col-lg-10">
                    <input type="file" class="form-control-file" id="blogImage">
                </div>
            </div>
            <div class="form-group row formRow">
                <label for="blogContent" class="col-lg-2 col-form-label">Content</label>
                <div class="col-lg-10">
                    <textarea class="form-control" id="blogContent" rows="5"></textarea>
                </div>
            </div>
            <div class="formButtonRow">
                <button class="btn btn-success formButton" type="submit">Submit</button>
                <a asp-action="AdminPanel"><button type="button" class="btn btn-secondary formButton">Cancel</button></a>
            </div>
        </form>
    </div>
</div>


